{
  "name": "futuhours-ui-next",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "engines": {
    "npm": ">=3.3.12 <4",
    "node": ">=5.5.0 <6"
  },
  "scripts": {
    "build": "check-node-version --package && npm run copy-assets && npm run js-build && npm run css-build",
    "watch": "check-node-version --package && npm run copy-assets && (npm run js-watch & npm run css-watch)",
    "js-build": "NODE_PATH=. NODE_ENV=production browserify -g envify -t babelify futuhours/ui/index.js | uglifyjs --compress --mangle > dist/index.js 2> /dev/null",
    "js-watch": "NODE_PATH=.                     watchify   -g envify -t babelify futuhours/ui/index.js --debug -v                    -o dist/index.js",
    "css-build": "                                                    node-sass --include-path=node_modules --image-path=assets --output dist --output-style=compressed futuhours/ui/index.scss",
    "css-watch": "chokidar 'futuhours/**/*.scss' --initial --command 'node-sass --include-path=node_modules --image-path=assets --output dist                           futuhours/ui/index.scss'",
    "copy-assets": "rm -rf dist/* && cp -R assets futuhours/ui/index.html dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jareware/futuhours-ui-next.git"
  },
  "author": "Jarno Rantanen <jarno@jrw.fi>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jareware/futuhours-ui-next/issues"
  },
  "homepage": "https://github.com/jareware/futuhours-ui-next",
  "dependencies": {
    "axios": "^0.9.1",
    "babel-cli": "^6.6.5",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "bootswatch": "git+https://github.com/thomaspark/bootswatch.git#v3.3.6+1",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "check-node-version": "^1.1.1",
    "chokidar-cli": "^1.2.0",
    "css-ns": "^1.0.0",
    "envify": "^3.4.0",
    "eslint": "^2.4.0",
    "eslint-plugin-react": "^4.2.3",
    "fastclick": "^1.0.6",
    "immutable": "^3.7.6",
    "lodash": "^4.6.1",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "react": "^0.14.7",
    "react-bootstrap": "^0.28.3",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.1",
    "redux": "^3.3.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  }
}
